<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Grocery.App.Views.ProductView"
             Title="ProductView">

    <Shell.TitleView>
        <Grid>
            <Label Text="Producten" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Border Stroke="#C49B33" StrokeThickness="4" Padding="10" Margin="10" HorizontalOptions="Center">
        <CollectionView x:Name="CollectionView" ItemsSource="{Binding Products}" Margin="20" HorizontalOptions="Center">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Naam van het product" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Voorraad" Grid.Column="1" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                    <Label Text="THT datum" Grid.Column="2" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                    <Label Text="Prijs" Grid.Column="3" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Entry
                            Grid.Column="0"
                            Placeholder="Naam"
                            ReturnType="Done"
                            Text="{Binding Name}"
                            ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductViewModel}}, Path=UpdateProductCommand}"
                            ReturnCommandParameter="{Binding}"
                        />

                        <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                            <Entry
                                Keyboard="Numeric"
                                Placeholder="Voorraad"
                                HorizontalOptions="End"
                                Text="{Binding Stock}"
                                ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductViewModel}}, Path=UpdateProductCommand}"
                                ReturnCommandParameter="{Binding}"
                            />
                            <Label VerticalOptions="Center">op voorraad</Label>
                        </HorizontalStackLayout>

                        <DatePicker
                            Grid.Column="2"
                            HorizontalOptions="End"
                            Date="{Binding ShelfLife}"
                            x:Name="ProductDatePicker"
                        >
                            <DatePicker.Behaviors>
                                <toolkit:EventToCommandBehavior
                                    EventName="DateSelected"
                                    Command="{Binding Source={Reference CollectionView}, Path=BindingContext.UpdateProductCommand}"
                                    CommandParameter="{Binding}"
                                />
                            </DatePicker.Behaviors>
                        </DatePicker>

                        <HorizontalStackLayout Grid.Column="3" HorizontalOptions="End">
                            <Label Text="â‚¬" VerticalOptions="Center" />
                            <Entry
                                Keyboard="Numeric"
                                HorizontalOptions="End"
                                Text="{Binding Price, StringFormat='{0:F2}'}"
                                ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductViewModel}}, Path=UpdateProductCommand}"
                                ReturnCommandParameter="{Binding}"
                            />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
</ContentPage>